<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/lfc_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/lfc_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.UTS_PROJEK"
        tools:targetApi="31">
        <activity
            android:name=".PemainActivity"
            android:exported="false"
            android:label="@string/title_activity_pemain"
            android:theme="@style/Theme.UTS_PROJEK" />
        <activity
            android:name=".KlasemenActivity"
            android:exported="false"
            android:label="@string/title_activity_klasemen"
            android:theme="@style/Theme.UTS_PROJEK" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.UTS_PROJEK">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>